<% include partials/header %>

<div class = "bg_background"></div>
<div class="row">
	<div class="col-md-3 col-xs-12 sign_up_card">
		<div class="card">
			<div class="card-body">
				<h2 class="login_title text-center">Send Link</h2>
				<form action="/forgot_password" method="POST">
					<div class = "form-group">
						<input class = "form-control" type="email" name = "email" placeholder = "Enter Email">
					</div>
					<div class = "form-group">
						<button class = "btn btn-raised btn-success btn-block">Reset Password</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>