<% include partials/header %>
<% include partials/navbar %>
<div class="col-md-12 col-xs-12 profile-align">
	<div class="row">
		<div class="col-md-6 col-xs-12">
			<div class="card">
				<div class="card-body">
					<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
					  <div class="carousel-inner">
					    <div class="carousel-item active">
					      <img class="d-block w-100" src="<%= artists.details.picture %>" onerror="this.src='https://via.placeholder.com/450;'" alt="First slide">
					    </div>
					    <div class="carousel-item">
					      <img class="d-block w-100" src="https://via.placeholder.com/450" onerror="this.src='https://via.placeholder.com/450;'" alt="Second slide">
					    </div>
					    <div class="carousel-item">
					      <img class="d-block w-100" src="https://via.placeholder.com/450" onerror="this.src='https://via.placeholder.com/450;'" alt="Third slide">
					    </div>
					  </div>
					  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
					    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
					    <span class="sr-only">Previous</span>
					  </a>
					  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
					    <span class="carousel-control-next-icon" aria-hidden="true"></span>
					    <span class="sr-only">Next</span>
					  </a>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-6 col-xs-12">
			<div class="card">
				<div class="card-body">
					<h2> <%= artists.details.firstname %>  <%= artists.details.lastname %> </h2>
					<table class="table">
					  <tbody>
					    <tr>
					      <th scope="row">Gender</th>
					      <td><%= artists.details.gender %> </td>
					    </tr>
					    <tr>
					      <th scope="row">Hair</th>
					      <td><%= artists.details.haircolor %></td>
					    </tr>
					    <tr>
					      <th scope="row">Eyes</th>
					      <td><%= artists.details.eyecolor %></td>
					    </tr>
					    <tr>
					      <th scope="row">Height</th>
					      <td><%= artists.details.height %></td>
					    </tr>
					    <tr>
					      <th scope="row">Shoe</th>
					      <td><%= artists.details.shoe %></td>
					    </tr>
					  </tbody>
					</table>
				</div>
			</div>

			<div class="card profile-align">
				<div class="card-body">
					<p><b>Youtube Links</b></p>
					<p><a href='<%= artists.details.ytlink %>' target="_blank"><%= artists.details.ytlink %></a></p>
				</div>
			</div>
			<%if (currentUser.type == 'recruiter') { %>
			<button class="btn btn-secondary btn-raised profile-align" data-toggle="modal" data-target="#contactArtist">Contact Artist</button>
			<% } %>
			<div class="modal fade" id="contactArtist" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLabel">Contact <%= artists.details.firstname %>  <%= artists.details.lastname %></h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<form>
									<div class="form-group">
										<label for="exampleInputEmail1">Email address</label>
										<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>
										<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
									</div>
									<div class="form-group">
										<label for="exampleInputEmail1">Firstname</label>
										<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Firstname" required>
									</div>
									<div class="form-group">
										<label for="exampleInputEmail1">Lastname</label>
										<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Lastname" required>
									</div>
									<div class="form-group">
										<label for="exampleFormControlTextarea1">Message</label>
										<textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Type message" required></textarea>
									</div>
									<button type="button" class="btn btn-primary btn-raised">Send</button>
								</form>
							</div>
						</div>
					</div>
				</div>
		</div>
	</div>
</div>
