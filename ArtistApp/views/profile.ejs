<% include partials/header %>
<% include partials/navbar %>
<div class="col-md-12 col-xs-12 profile-align">
	<div class="row">
		<div class="col-md-6 col-xs-12">
			<div class="card">
				<div class="card-body">
					<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
					  <div class="carousel-inner">
					    <div class="carousel-item active">
					      <img class="d-block w-100" src="<%= artists.details.picture %>" onerror="this.src='https://via.placeholder.com/450' alt="First slide">
					    </div>
					    <div class="carousel-item">
					      <img class="d-block w-100" src="https://via.placeholder.com/450" onerror="this.src='https://via.placeholder.com/450' alt="Second slide">
					    </div>
					    <div class="carousel-item">
					      <img class="d-block w-100" src="https://via.placeholder.com/450" onerror="this.src='https://via.placeholder.com/450' alt="Third slide">
					    </div>
					  </div>
					  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
					    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
					    <span class="sr-only">Previous</span>
					  </a>
					  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
					    <span class="carousel-control-next-icon" aria-hidden="true"></span>
					    <span class="sr-only">Next</span>
					  </a>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-6 col-xs-12">
			<div class="card">
				<div class="card-body">
					<h2> <%= artists.details.firstname %>  <%= artists.details.lastname %> </h2>
					<table class="table">
					  <tbody>
					    <tr>
					      <th scope="row">Gender</th>
					      <td><%= artists.details.gender %> </td>
					    </tr>
					    <tr>
					      <th scope="row">Hair</th>
					      <td><%= artists.details.haircolor %></td>
					    </tr>
					    <tr>
					      <th scope="row">Eyes</th>
					      <td><%= artists.details.eyecolor %></td>
					    </tr>
					    <tr>
					      <th scope="row">Height</th>
					      <td><%= artists.details.height %></td>
					    </tr>
					    <tr>
					      <th scope="row">Shoe</th>
					      <td><%= artists.details.shoe %></td>
					    </tr>
					  </tbody>
					</table>
				</div>
			</div>

			<div class="card profile-align">
				<div class="card-body">
					<p><b>Youtube Links</b></p>
					<p><a href="<%= artists.ytlink %>"><%= artists.details.ytlink %></a></p>
				</div>
			</div>

			<button type="button" class="btn btn-raised btn-success profile-align">Contact Artist</button>
		</div>
	</div>
</div>