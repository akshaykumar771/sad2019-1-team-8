<% include partials/header %>
    
<div class="container">
	<div class= "title"><h1> Be You </h1> </div>
		<h2> Artist Management </h2>
		<a class="btn btn-outline-dark btn-lg" data-toggle="modal" data-target="#loginModal">Enter</a>
	</div>
</div>

<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title" id="exampleModalLabel">Login</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	      	<form action="/" method = "POST">
			    <div class = "form-group">
			        <input class = "form-control" name = "Username" placeholder = "Email">
			    </div>
			    <div class = "form-group">
			    	<input class = "form-control" name = "Password" placeholder = "Password">
			    </div>
			    <div class = "form-group">
			    	<button class = "btn btn-lg btn-primary btn-block">Login</button>
			    </div>
			    <p>Or</p>
				<a href ="/signup" class="btn btn-lg btn-primary btn-block"> Sign Up</a>
			</form>
	      </div>
	    </div>
	  </div>
	</div>
<% include partials/footer %>