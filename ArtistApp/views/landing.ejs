<% include partials/header %>

<div class="bg_background"></div>
<div class="container">
	<div class="title">
		<h1> Be You </h1>
		<h2 class="landing_text"> Artist Management </h2>
	</div>
	<div class="row">
			<div class="col-xs-12 sign_up_card">
				<div class="card">
					<div class="card-body">
						<h2 class="text-center">Login</h2>
						<form action="/login" method="POST">
							<div class="form-group">
								<input class="form-control" type="email" name="username" placeholder="Email">
							</div>
							<div class="form-group">
								<input class="form-control" type="password" name="password" placeholder="Password">
							</div>
							<div class="form-group">
								<button class="btn btn-raised btn-secondary btn-block">Login</button>
							</div>
							<p class="text-center">OR</p>
							<div class="row">
								<div class="col-md-6 col-xs-12">
									<a href="/register" class="btn btn-secondary">Sign Up as an Artist</a>
								</div>
								<div class="col-md-6 col-xs-12">
									<a href="/registerrecruiter" class="btn btn-secondary">Sign Up as a Recruiter</a>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
</div>
<% include partials/footer %>