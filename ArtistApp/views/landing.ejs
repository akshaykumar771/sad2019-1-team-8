<% include partials/header %>

<div class="bg_background"></div>
<div class="container">
	<div class="title">
		<h1> Be You </h1>
		<h2 class="landing_text"> Artist Management </h2>
		<a class="btn btn-outline-dark btn-lg" data-toggle="modal" data-target="#loginModal">Enter</a>
	</div>
</div>

<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Login</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form action="/login" method="POST">
					<div class="form-group">
						<input class="form-control" type="email" name="username" placeholder="Email">
					</div>
					<div class="form-group">
						<input class="form-control" type="password" name="password" placeholder="Password">
					</div>
					<a class="forgot_password" href="/forgot_password">Forgot Password ?</a>
					<div class="form-group">
						<button class="btn btn-raised btn-secondary btn-block">Login</button>
					</div>
					<p class="text-center">OR</p>
						<div class="row">
							<div class="col-md-6 col-xs-12">
								<button type="button" class="btn btn-secondary"><a href="/register">Sign Up as an Artist</a></button>
							</div>
							<div class="col-md-6 col-xs-12">
								<button type="button" class="btn btn-secondary"><a href="/registerrecruiter">Sign Up as a Recruiter</a></button>
							</div>
						</div>
				</form>
			</div>
		</div>
	</div>
</div>
<% include partials/footer %>